<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiky.customui.activity.CardStackActivity">

    <com.wiky.ui.layout.CardStack
        android:id="@+id/card_stack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:card_layout_orientation="horizontal"
        app:card_padding_left="60dp"
        app:card_padding_right="60dp"
        app:card_padding_top="80dp"
        app:card_padding_bottom="150dp"
        app:card_padding="10dp"/>

</RelativeLayout>
